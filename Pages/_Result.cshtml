@model ImageProcessingWeb.Models.Images

<div class="d-flex gap-2 flex-wrap text-center">
    <div>
        <h3>Source image</h3>
        <img src="data:image/jpeg;base64, @Model.SourceStr">
    </div>
    @if (Model.ShowHistogram)
    {
        <div>
            <h3>Source histogram</h3>
            <img src="data:image/jpeg;base64, @Model.SourceHistogramStr" class="m-auto border" width="100" height="100">
        </div>
    }
    <div>
        <h3>Output image</h3>
        <img src="data:image/jpeg;base64, @Model.OutputStr">
    </div>
    @if (Model.ShowHistogram)
    {
        <div>
            <h3>Output histogram</h3>
            <img src="data:image/jpeg;base64, @Model.OutputHistogramStr" class="m-auto border" width="100" height="100">
        </div>
    }
</div>